<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvBotMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_bot_message"
        android:padding="12dp"
        android:text="@string/bot_message_placeholder"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:autoLink="web"
        android:lineSpacingExtra="2dp"
        android:breakStrategy="simple"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        tools:text="@string/bot_message_placeholder"/>

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/bot_message_speak_desc"
        android:src="@drawable/ic_volume"
        app:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/tvBotMessage"
        app:layout_constraintStart_toStartOf="@id/tvBotMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>