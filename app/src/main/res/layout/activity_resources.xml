<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wellness Resources"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/langSelectorContainer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardBackgroundColor="#F1F3F4"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <AutoCompleteTextView
                android:id="@+id/langDropdown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableStart="@drawable/ic_globe"
                android:drawableEnd="@drawable/ic_chevron_down"
                android:drawablePadding="8dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:inputType="none"
                android:paddingHorizontal="12dp"
                android:text="English"
                android:textColor="#202124"
                android:textSize="14sp" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6F1EA"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.08"
                        android:text="RESOURCE OF THE DAY"
                        android:textColor="#5F6E62"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/iconBox"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLabel">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_flower"
                            app:tint="#2F6F4E" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="2dp"
                        android:text="5-Minute Calm\nBreathing"
                        android:textColor="#1A1A1A"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/iconBox" />

                    <TextView
                        android:id="@+id/tvDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Guided relaxation for stress relief"
                        android:textColor="#5F6E62"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlay"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="#1D2B36"
                        android:text="Play Now"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_play"
                        app:iconGravity="textStart"
                        app:layout_constraintTop_toBottomOf="@id/tvDesc" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvForYouToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="For You Today"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardFeatured" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bentoGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvForYouToday">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBreathing"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@+id/cardExam"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.47">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EEF6FF"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_headphone"
                            app:tint="#2563EB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Deep Breathing\nExercise"
                            android:textColor="#1A1A1A"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardExam"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardBreathing"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.47">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4EEFF"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_play"
                            app:tint="#7C3AED" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Managing Exam\nStress"
                            android:textColor="#1A1A1A"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSleep"
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardBreathing"
                    app:layout_constraintWidth_percent="0.47">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E6F4EA"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_learn"
                            app:tint="#15803D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Sleep Better\nTonight"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Simple night routine"
                            android:textColor="#4B5563"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEvening"
                    android:layout_width="0dp"
                    android:layout_height="134dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardExam"
                    app:layout_constraintWidth_percent="0.47">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EEF6FF"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_moon"
                            app:tint="#4338CA" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Evening Wind\nDown"
                            android:textColor="#1A1A1A"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSelfCare"
                    android:layout_width="0dp"
                    android:layout_height="134dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/cardSleep"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardEvening"
                    app:layout_constraintWidth_percent="0.47">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F6F0FF"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_heart"
                            app:tint="#EC4899" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Self-Care Tips"
                            android:textColor="#1A1A1A"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMorning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/cardSleep">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E6F4EA"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_stars"
                            app:tint="#F97316" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Mindful Morning Routine"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Start your day with intention"
                            android:textColor="#4B5563"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvExploreMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Explore More Resources"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bentoGrid" />

            <HorizontalScrollView
                android:id="@+id/hsvResources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/tvExploreMore"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMusic"
                        style="@style/WellnessCardStyle"
                        app:cardBackgroundColor="#F6F0FF"
                        >
                        <LinearLayout style="@style/WellnessCardContent">
                            <ImageView style="@style/WellnessCardIcon" android:src="@drawable/ic_music" app:tint="#7C3AED" android:background="@drawable/bg_icon_circle"/>
                            <TextView style="@style/WellnessCardText" android:text="Relaxing\nMusic" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFocus"
                        style="@style/WellnessCardStyle"
                        app:cardBackgroundColor="#EEF6FF">
                        <LinearLayout style="@style/WellnessCardContent">
                            <ImageView style="@style/WellnessCardIcon" android:background="@drawable/bg_icon_circle" android:src="@drawable/ic_brain" app:tint="#2563EB" />
                            <TextView style="@style/WellnessCardText" android:text="Focus &amp;\nStudy" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMorningEnergy"
                        style="@style/WellnessCardStyle"
                        app:cardBackgroundColor="#E6F4EA">
                        <LinearLayout style="@style/WellnessCardContent">
                            <ImageView style="@style/WellnessCardIcon" android:background="@drawable/bg_icon_circle" android:src="@drawable/ic_coffee" app:tint="#16A34A" />
                            <TextView style="@style/WellnessCardText" android:text="Morning\nEnergy" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAffirmations"
                        style="@style/WellnessCardStyle"
                        app:cardBackgroundColor="#FFF7ED">
                        <LinearLayout style="@style/WellnessCardContent">
                            <ImageView style="@style/WellnessCardIcon" android:src="@drawable/ic_face" app:tint="#F97316" />
                            <TextView style="@style/WellnessCardText" android:text="Positive\nAffirmations" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSelfCareBoost"
                        style="@style/WellnessCardStyle"
                        app:cardBackgroundColor="#FDF2F8"
                        >
                        <LinearLayout style="@style/WellnessCardContent">
                            <ImageView style="@style/WellnessCardIcon" android:background="@drawable/bg_icon_circle" android:src="@drawable/ic_tree" app:tint="#DB2777" />
                            <TextView style="@style/WellnessCardText" android:text="Nature\nSounds" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSleepSounds"
                        style="@style/WellnessCardStyle"
                        android:layout_marginEnd="0dp"
                        app:cardBackgroundColor="#ECFEFF">
                        <LinearLayout style="@style/WellnessCardContent">
                            <ImageView style="@style/WellnessCardIcon" android:background="@drawable/bg_icon_circle" android:src="@drawable/ic_waves" app:tint="#0891B2" />
                            <TextView style="@style/WellnessCardText" android:text="Ocean\nWaves" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>