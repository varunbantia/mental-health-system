<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Welcome Section -->
        <LinearLayout
            android:id="@+id/welcomeSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Manomitra"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A safe space for your mental well-being"
                android:textSize="15sp"
                android:alpha="0.75"
                android:layout_marginTop="6dp"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Disclaimer Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/disclaimerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:layout_constraintTop_toBottomOf="@id/welcomeSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Important Safety Notice"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Manomitra does not replace professional medical or psychological care. The information provided is for supportive and educational purposes only."
                    android:textSize="14.5sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="?attr/colorOnSurface"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="20dp"
                    android:background="#1A000000"/>

                <!-- Emergency Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Support"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#D32F2F"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="If you feel unsafe or are experiencing a crisis, please contact your local emergency services or a trusted helpline immediately."
                    android:textSize="14sp"
                    android:textColor="#D32F2F"/>

                <!-- Agreement -->
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbAgree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="I have read and understand this information"
                    android:textSize="14sp"/>

                <!-- Continue Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:text="Continue"
                    android:enabled="false"
                    app:cornerRadius="14dp"
                    app:iconGravity="textStart"
                    android:backgroundTint="?attr/colorPrimary"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
