<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnMoodGood"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:background="@drawable/mood_selector_bg"
                android:src="@drawable/ic_good"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnMoodOkay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:background="@drawable/mood_selector_bg"
                android:src="@drawable/ic_okay"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Okay"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnMoodLow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:background="@drawable/mood_selector_bg"
                android:src="@drawable/ic_low"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnMoodVeryLow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:background="@drawable/mood_selector_bg"
                android:src="@drawable/ic_verylow"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very Low"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.6" />
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/moodMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/tvMoodStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Select a mood to see how Manomitra can help you today."
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="normal"
            android:gravity="center_vertical" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>