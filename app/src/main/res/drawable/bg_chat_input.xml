<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Inner background (keep white/transparent) -->
    <solid android:color="@android:color/transparent" />

    <!-- Blue border ring -->
    <stroke
        android:width="1dp"
        android:color="#3B82F6" />   <!-- same blue as in your UI -->

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Padding inside -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>